<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
    </style>

    <style name="scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorScrollBackground</item>
    </style>

    <style name="linear_layout_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="linear_layout_one">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linear_layout_two">
        <item name="android:layout_width">@dimen/linear_layout_two_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_view_height</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/image_view_padding</item>
    </style>

    <style name="text_view_one">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/text_view_one_marginBottom</item>
        <item name="android:layout_marginTop">@dimen/text_view_one_marginTop</item>
        <item name="android:textColor">@color/colorTextVieOne</item>
        <item name="android:textSize">@dimen/text_view_one_textSize</item>
    </style>

    <style name="text_view_two" parent="text_view_one">
        <item name="android:textColor">@color/colorTextViewTwo</item>
        <item name="android:textSize">@dimen/text_view_two_textSize</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/button_layout_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/button_layout_marginRight</item>
        <item name="android:layout_marginBottom">@dimen/button_layout_marginBottom</item>
    </style>

    <style name="view_divide">
        <item name="android:layout_width">@dimen/view_divide_layout_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">@dimen/view_divide_layout_marginTop</item>
    </style>

    <style name="button_reset">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_reset_layout_margin</item>
    </style>
</resources>